{cover_enabled, true}.
{erl_opts, [
  {parse_transform, lager_transform},
  debug_info,
  fail_on_warning
]}.

{deps, [
  {lager, "3.9.2"},
  {jiffy,              {git, "git://github.com/davisp/jiffy.git", {tag, "1.0.8"}}}
]}.


{relx, [
        {sys_config, "./sample.config"},
        {release, {lager_logstash_backend, "1"},
         [lager_logstash_backend]},
        {dev_mode, true},
        {include_erts, false},
        {extended_start_script, true}
       ]}.
